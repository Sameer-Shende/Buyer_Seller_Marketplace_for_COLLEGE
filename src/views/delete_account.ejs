<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Delete Account Form -->
    <div class="flex items-center justify-center min-h-screen">
      <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Delete Account</h1>


        <form action="/delete-account" method="POST" class="space-y-4">
          <div>
            <label for="email" class="block text-gray-700 font-semibold">Email</label>
            <input 
              type="email" 
              name="email" 
              id="email" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300"
              required
            />
          </div>
          <div>
            <label for="password" class="block text-gray-700 font-semibold">Password</label>
            <input 
              type="password" 
              name="password" 
              id="password" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300"
              required
            />
          </div>
          <div>
            <button 
              type="submit" 
              class="w-full px-4 py-2 bg-red-500 text-white font-semibold rounded-lg shadow hover:bg-red-600"
            >
              Confirm Deletion
            </button>
          </div>
        </form>

        <div class="mt-4 text-center">
          <a href="/products" class="text-blue-500 hover:underline">Cancel and go back</a>
        </div>
      </div>
    </div>
  </body>
</html>
