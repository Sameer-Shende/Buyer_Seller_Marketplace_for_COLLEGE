<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="bg-gray-100">
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Product Details -->
    <div class="flex items-center justify-center min-h-screen">
      <div class="max-w-4xl bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Product Details</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Product Image -->
          <div>
            <img 
              src="<%= product.images[0] || '/default-image.jpg' %>" 
              alt="<%= product.productName %>" 
              class="w-full h-64 object-contain rounded-lg shadow-md"
            >
          </div>

          <!-- Product Info -->
          <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4"><%= product.productName %></h2>
            <p class="mb-2"><strong>Category:</strong> <%= product.productCategory %></p>
            <p class="mb-2"><strong>Description:</strong> <%= product.description || 'No description available' %></p>
            <p class="mb-2"><strong>Price:</strong> ₹<%= product.price %> 
              <% if (product.originalPrice && product.originalPrice > product.price) { %>
                <span class="text-sm text-gray-500"><strike>₹<%= product.originalPrice %></strike></span>
              <% } %>
            </p>
            <p class="mb-2"><strong>Owner:</strong> <%= product.ownerName %></p>
            <p class="mb-2"><strong>Email:</strong> <%= product.email %></p>
            <p class="mb-2"><strong>Mobile:</strong> <%= product.mobile %></p>
            <p class="mb-2"><strong>Room:</strong> <%= product.room %></p>
            <p class="mb-2"><strong>Status:</strong> <%= product.status %></p>
            <p class="mb-2"><strong>Usage:</strong> <%= product.usage %></p>
          </div>
        </div>

        <!-- Go Back Button -->
        <div class="mt-6 text-center">
          <a href="javascript:history.back()" 
             class="px-6 py-2 bg-blue-500 text-white rounded-lg shadow-md hover:bg-blue-600">
            Go Back
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
